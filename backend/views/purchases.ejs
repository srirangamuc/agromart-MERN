<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Purchases</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #4CAF50;
            margin-top: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
            max-width: 800px;
            margin: 0 auto;
        }

        li {
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
            margin: 10px 0;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        li h3 {
            color: #4CAF50;
            margin-bottom: 10px;
        }

        li p {
            margin: 5px 0;
            color: #555;
        }

        a {
            display: block;
            text-align: center;
            margin: 20px auto;
            width: 200px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        a:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Your Purchases</h1>
    <ul>
        <% purchases.forEach(purchase => { %>
            <li>
                <h3>Purchase Date: <%= purchase.purchaseDate.toDateString() %></h3>
                <ul>
                    <% purchase.items.forEach(item => { %>
                        <li>
                            <p><%= item.name %> - Quantity: <%= item.quantity %></p>
                        </li>
                    <% }); %>
                </ul>
                <p>Price: â‚¹<%= purchase.totalAmount %></p>
                <p>Status: <%= purchase.status %></p>
            </li>
        <% }); %>
    </ul>
    <a href="/customer">Back to Dashboard</a>
</body>
</html>
